---
import dayjs from 'dayjs';
import type { CollectionEntry } from 'astro:content';

type Props = { blog: CollectionEntry<'blog'> };

const { blog } = Astro.props;
---
<div class="w-full">
  <div class="rounded-md overflow-hidden">
    <div class="relative block aspect-[43/23]">
      <img class="absolute w-full h-full inset-0 object-cover" src={blog.data.featuredImage} />
    </div>
  </div>
  <div class="pt-4">
    <p class="font-semibold text-2xl line-clamp-2">{blog.data.title}</p>
    <div class="mt-3 flex items-center space-x-3 text-gray-500 dark:text-gray-400">
