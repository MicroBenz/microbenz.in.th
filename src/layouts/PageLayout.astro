---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';

type Props = {
	title?: string;
	featuredImage?: string;
};

const { title = 'เบนซ์เขียนบล็อกนะจ๊ะ - MicroBenz', featuredImage } = Astro.props;
---

<html lang="th">
	<head>
		<BaseHead title={title} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;500&display=swap" rel="stylesheet">
	</head>

	<body class="font-sans">
		<Header />
		<main class="container mx-auto pt-[88px] pb-[88px] md:pt-[96px] md:pb-[96px] px-4 md:px-0">
			<slot />
		</main>
	</body>
</html>
