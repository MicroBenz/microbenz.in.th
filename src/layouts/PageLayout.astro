---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
	title?: string;
	featuredImage?: string;
};

const { title = 'เบนซ์เขียนบล็อกนะจ๊ะ - MicroBenz', featuredImage } = Astro.props;
---

<html lang="th">
	<head>
		<BaseHead title={title} featuredImage={featuredImage} />
	</head>

	<body class="font-sans bg-white text-celestial-blue">
		<Header />
		<main class="container mx-auto pt-[84px] md:pt-[88px] pb-[84px] md:pb-[88px] px-6 md:px-0">
			<slot />
		</main>
		<Footer />
	</body>
</html>
